auto lo
iface lo inet loopback

auto enp175s0f0
iface enp175s0f0 inet static
	address 10.1.21.{{ node_ip }}/24
#Corosync

auto eno1np0
iface eno1np0 inet manual

auto enp96s0f1np1
iface enp96s0f1np1 inet manual

auto enp175s0f1
iface enp175s0f1 inet manual

auto bond0
iface bond0 inet manual
	bond-slaves eno1np0 enp96s0f1np1
	bond-miimon 100
	bond-mode 802.3ad
	bond-xmit-hash-policy layer2+3

auto vmbr0
iface vmbr0 inet static
	address 10.1.20.{{ node_ip }}/24
	gateway 10.1.20.1
	bridge-ports bond0
	bridge-stp off
	bridge-fd 0
    bridge-vlan-aware yes
    bridge-vids 2-4094

source /etc/network/interfaces.d/*