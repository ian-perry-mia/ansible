# This is a configuration file for the Zabbix server daemon
# THIS FILE IS MANAGED BY ANSIBLE

LogFile= /var/log/zabbix/zabbix_server.log
LogFileSize=32
PidFile=/run/zabbix/zabbix_server.pid
SocketDir=/run/zabbix

DBHost={{ sql_host }}
DBPassword={{ zabbix_sql_password }}
DBName=zabbix
DBUser=zabbix
AllowUnsupportedDBVersions=1

HANodeName={{ inventory_hostname }}
NodeAddress={{ inventory_hostname }}.hq.avionics411.com

StartIPMIPollers=4
SNMPTrapperFile=/var/log/snmptrap/snmptrap.log
Timeout=4
LogSlowQueries=3000

Include=/etc/zabbix/zabbix_server.d/*.conf

StatsAllowedIP=0.0.0.0
EnableGlobalScripts=0

FpingLocation=/usr/bin/fping
Fping6Location=/usr/bin/fping6

SSHKeyLocation=/var/lib/zabbix/.ssh